<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:WebKeepApp.ViewModels"
             x:Class="WebKeepApp.Pages.MainPage"
             Shell.NavBarIsVisible="False"
             Title="Home">

    <Grid Padding="20"
          RowSpacing="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header Row -->
        <Grid Grid.Row="0"
              VerticalOptions="Center">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <VerticalStackLayout Grid.Column="0"
                                 Spacing="6"
                                 VerticalOptions="Center">
                <Label Text="Welcome"
                       FontSize="20"
                       FontAttributes="Bold"
                       Margin="0,0,0,2"/>
                <Label Text="{Binding Username}"
                       FontSize="16"
                       TextColor="Gray"/>
            </VerticalStackLayout>

            <Button Grid.Column="1"
                    Text="Add"
                    Command="{Binding AddWebsiteCommand}"
                    Margin="15,0"
                    WidthRequest="85"
                    HeightRequest="45"
                    CornerRadius="8"/>

            <Button Grid.Column="2"
                    Text="Logout"
                    Command="{Binding LogoutCommand}"
                    WidthRequest="85"
                    HeightRequest="45"
                    CornerRadius="8"/>
        </Grid>

        <Button Grid.Row="1"
                Grid.ColumnSpan="3"
                Text="Backup Data"
                Command="{Binding BackupCommand}"
                HeightRequest="45"
                CornerRadius="8"/>

        <!-- Search Bar -->
        <Entry Grid.Row="2"
               Grid.ColumnSpan="3"
               Placeholder="Search websites..."
               Text="{Binding SearchText}"
               ReturnCommand="{Binding SearchCommand}"
               Margin="0,5,0,10"
               HeightRequest="50"
               FontSize="16"/>

        <!-- Websites List -->
        <CollectionView Grid.Row="3"
                        ItemsSource="{Binding Websites}"
                        Margin="0,5">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Border Margin="0,8"
                            Padding="18"
                            StrokeShape="RoundRectangle 12"
                            BackgroundColor="{AppThemeBinding Light=White, Dark=#333333}">
                        <Border.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type vm:MainViewModel}}, Path=ShowOptionsCommand}"
                                                  CommandParameter="{Binding .}"/>
                        </Border.GestureRecognizers>
                        <Grid RowSpacing="8">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <!-- Website Name -->
                            <Label Grid.Row="0"
                                   Grid.Column="0"
                                   Text="{Binding Name}"
                                   FontSize="19"
                                   FontAttributes="Bold"/>

                            <!-- Creation Date -->
                            <Label Grid.Row="0"
                                   Grid.Column="1"
                                   Text="{Binding DateCreatedAt, StringFormat='{0:d}'}"
                                   FontSize="14"
                                   TextColor="Gray"
                                   Margin="0,0,0,2"
                                   VerticalOptions="Center"/>

                            <!-- Website URL -->
                            <Label Grid.Row="1"
                                   Grid.Column="0"
                                   Grid.ColumnSpan="2"
                                   Text="{Binding Url}"
                                   FontSize="16"
                                   TextColor="Gray"/>
                        </Grid>
                    </Border>
                </DataTemplate>
            </CollectionView.ItemTemplate>

            <CollectionView.EmptyView>
                <Grid>
                    <Label Text="No websites found"
                           FontSize="18"
                           HorizontalOptions="Center"
                           VerticalOptions="Center"/>
                </Grid>
            </CollectionView.EmptyView>
        </CollectionView>
    </Grid>
</ContentPage>
